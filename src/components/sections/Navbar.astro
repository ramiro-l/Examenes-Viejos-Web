---
import { Icon } from "astro-icon/components";
import { Button } from "../ui/button";
---

<nav class="mb-5 max-md:mt-6">
    <div class="flex items-center justify-between">
        <a class="flex items-center" href="/">
            <Icon name="carbon:attachment" size={32} class="mr-2" />
            <h1 class="text-2xl font-bold max-md:text-xl">Examenes Viejos | FaMAF</h1>
        </a>
        <div>
            <a onclick="history.back()" class="max-md:scale-75">
                <Button className="px-2 py-0" variant="outline">
                    <Icon name="carbon:arrow-left" size={20} />
                </Button>
            </a>
            <Button id="toggelTheme" className="px-2 py-0 max-md:hidden" variant="outline">
                <Icon name="carbon:sun" size={20} class="dark:hidden" />
                <Icon name="carbon:moon" size={20} class="hidden dark:inline" />
            </Button>
        </div>
    </div>
</nav>

<script is:inline>
    function setupToggelTheme() {
        const toggler = document.getElementById("toggelTheme");
        const body = document.body;

        toggler?.addEventListener("click", () => {
            body.classList.toggle("dark");
        });
    }

    // If the document is not loaded, setup the tabs when it is.
    document.addEventListener("DOMContentLoaded", () => {
        setupToggelTheme();
    });

    // If the document is already loaded, setup the tabs.
    if (document.readyState === "complete" || document.readyState === "interactive") {
        setupToggelTheme();
    }
</script>
